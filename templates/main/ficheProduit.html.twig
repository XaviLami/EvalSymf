{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
  <table class="table table-dark">
    <thead>
    <tr>
      <th scope="col">{% trans %}Nom{% endtrans %}</th>
      <th scope="col">{% trans %}Photo{% endtrans %}</th>
      <th scope="col">{% trans %}Quantité{% endtrans %}</th>
      <th scope="col">{% trans %}Prix{% endtrans %}</th>
      <th>{% trans %}Suppression{% endtrans %}</th>
    </tr>
    </thead>
      <tbody>
      <tr>
        <th scope="row">{{ produit.nom }}</th>
        <td><img src="{{ asset('/uploads/upload_files/' ~ produit.photo)}}" ></td>
        <td>{{ produit.quantite }}</td>
        <td>{{ produit.prix }} €</td>
        <td><a href="{{path("removeProduit",{id: produit.id})}}"><button class="btn btn-danger">{% trans %}Supprimer{% endtrans %}</button></a></td>
      </tr>
      </tbody>
  </table>
  {{form_start(formPanier)}}
  {{ form_end(formPanier)}}
{% endblock %}
